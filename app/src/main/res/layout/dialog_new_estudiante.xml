<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="300dp"
    android:layout_height="350dp">

    <TextView
        android:id="@+id/dialog_new_estudiantes_text_nombre"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:gravity="center"
        android:text="Nombre"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <EditText
        android:id="@+id/dialog_new_estudiantes_text_nombre_field"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/dialog_new_estudiantes_text_nombre"
        app:layout_constraintStart_toStartOf="@+id/dialog_new_estudiantes_text_nombre"
        app:layout_constraintTop_toBottomOf="@+id/dialog_new_estudiantes_text_nombre"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/dialog_new_estudiantes_text_edad"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:gravity="center"
        android:text="Edad"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dialog_new_estudiantes_text_nombre_field"
        app:layout_constraintVertical_bias="0.0" />

    <EditText
        android:id="@+id/dialog_new_estudiantes_text_edad_field"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/dialog_new_estudiantes_text_nombre"
        app:layout_constraintStart_toStartOf="@+id/dialog_new_estudiantes_text_nombre"
        app:layout_constraintTop_toBottomOf="@+id/dialog_new_estudiantes_text_edad"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/dialog_new_estudiantes_text_ciudad"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:gravity="center"
        android:text="Ciudad"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dialog_new_estudiantes_text_edad_field"
        app:layout_constraintVertical_bias="0.0" />

    <EditText
        android:id="@+id/dialog_new_estudiantes_text_ciudad_field"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/dialog_new_estudiantes_text_nombre"
        app:layout_constraintStart_toStartOf="@+id/dialog_new_estudiantes_text_nombre"
        app:layout_constraintTop_toBottomOf="@+id/dialog_new_estudiantes_text_ciudad"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/dialog_new_estudiante_button_save"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="SAVE"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/dialog_new_estudiantes_text_ciudad_field"
        app:layout_constraintStart_toStartOf="@+id/dialog_new_estudiantes_text_ciudad_field"
        app:layout_constraintTop_toBottomOf="@+id/dialog_new_estudiantes_text_ciudad_field"
        app:layout_constraintVertical_bias="0.0" />

</androidx.constraintlayout.widget.ConstraintLayout>